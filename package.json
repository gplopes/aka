{
	"name": "@owvy/aka",
	"version": "1.2.1",
	"description": "Aka is a friendly CLI to run sharable alias & bash commands.",
	"repository": {
		"type": "git",
		"url": "git@github.com:owvy/aka.git"
	},
	"keywords": [
		"terminal",
		"sharable",
		"alias",
		"bash",
		"shortcut",
		"shell",
		"args",
		"command",
		"cli",
		"javascript"
	],
	"engines": {
		"node": ">=8"
	},
	"preferGlobal": true,
	"bin": {
		"aka": "index.js"
	},
	"scripts": {
		"format": "prettier --write ./src",
		"lint": "eslint --fix ./src",
		"release": "npm publish --public=access && git push --follow-tags",
		"patch-release": "npm version patch && npm run release",
		"minor-release": "npm version minor && npm run release",
		"major-release": "npm version major && npm run release"
	},
	"author": "Owvy Labs",
	"homepage": "https://github.com/owvy/aka",
	"license": "ISC",
	"devDependencies": {
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-prettier": "^3.1.3",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.2",
		"prettier": "2.3.0"
	},
	"dependencies": {
		"chalk": "^4.0.0",
		"command-line-commands": "^3.0.1",
		"command-line-usage": "^6.1.0",
		"configstore": "^5.0.1",
		"shelljs": "^0.8.4",
		"yaml": "^1.9.2"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"prettier --write"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
